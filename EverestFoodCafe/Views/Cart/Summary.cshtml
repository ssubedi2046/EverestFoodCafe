@model EverestFoodCafe.Domain.Entities.Cart

<div id="cart">
    <span class="caption">
<b>Your Cart</b>
        @Model.Lines.Sum(x => x.Quantity) item(s),
        @Model.TotalValue().ToString("c")
</span> 
    @Html.ActionLink("Checkout", "Index", "Cart",
        new { returnUrl = Request.Url.PathAndQuery }, null)
    
</div>

